<% if feed_item.in_reply_to == nil %>
  <li id="<%= feed_item.id %>">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= wrap(feed_item.content) %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
    <% if current_user?(feed_item.user) %>
      <%= render 'shared/delete_link', object: feed_item %>
    <% end %>
  </li>
<% elsif feed_item.in_reply_to == '@' + @current_user.id.to_s + '-' + @current_user.name.split.join('-') or feed_item.user_id == @current_user.id %>
    <li id="<%= feed_item.id %>">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= wrap(feed_item.content) %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
    <% if current_user?(feed_item.user) %>
      <%= render 'shared/delete_link', object: feed_item %>
    <% end %>
  </li>
<% end %>