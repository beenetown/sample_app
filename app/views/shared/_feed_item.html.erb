<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %> 
    <% unless current_user?(feed_item.user) %>  
      | <%= link_to "Reply", "", "onclick" => "getName('\@#{feed_item.user.id.to_s}-#{feed_item.user.name.split.join('-')}')",  id: "replyLink", remote: true %>
    <% end %>
  </span>
  <span class="content"><%= wrap(feed_item.content) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= render 'shared/delete_link', object: feed_item %>
  <% end %>
</li>